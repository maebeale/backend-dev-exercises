<%= will_paginate @census_data, renderer: BootstrapPagination::Rails %>
<table class="table table-striped table-hover table-condensed table-responsive">
  <thead>
    <th class="stats-subheader-center"><%= CensusData.human_attribute_name(:report_id) %></th>
    <th class="stats-subheader-center"><%= CensusData.human_attribute_name(:sex) %></th>
    <th class="stats-subheader-center"><%= CensusData.human_attribute_name(:race) %></th>
    <th class="stats-subheader-center"><%= CensusData.human_attribute_name(:country) %></th>
    <th class="stats-subheader-center"><%= CensusData.human_attribute_name(:age) %></th>
    <th class="stats-subheader-center"><%= CensusData.human_attribute_name(:relationship) %></th>
    <th class="stats-subheader-center"><%= CensusData.human_attribute_name(:marital_status) %></th>
    <th class="stats-subheader-center"><%= CensusData.human_attribute_name(:education_level) %></th>
    <th class="stats-subheader-center"><%= CensusData.human_attribute_name(:workclass) %></th>
    <th class="stats-subheader-center"><%= CensusData.human_attribute_name(:occupation) %></th>
    <th class="stats-subheader-center"><%= CensusData.human_attribute_name(:over_50k) %></th>
    <th class="stats-subheader-center"><%= CensusData.human_attribute_name(:hours_week) %></th>
    <th class="stats-subheader-center"><%= CensusData.human_attribute_name(:capital_gain) %></th>
    <th class="stats-subheader-center"><%= CensusData.human_attribute_name(:capital_loss) %></th>
  </thead>
  <% @census_data.each do |datum| %>
    <tbody>
      <td><%= datum.report_id %></td>
      <td><%= datum.sex %></td>
      <td><%= strip_hyphens(datum.race) %></td>
      <td><%= strip_hyphens(datum.country) %></td>
      <td><%= show_as_i(datum.age) %></td>
      <td><%= strip_hyphens(datum.relationship) %></td>
      <td><%= strip_hyphens(datum.marital_status) %></td>
      <td><%= strip_hyphens(datum.education_level) %></td>
      <td><%= strip_hyphens(datum.workclass) %></td>
      <td><%= show_as_options(datum.occupation) %></td>
      <td><%= yes_no(datum.over_50k) %></td>
      <td><%= show_as_i(datum.hours_week) %></td>
      <td><%= hide_zero(number_to_currency(datum.capital_gain)) %></td>
      <td><%= hide_zero(number_to_currency(datum.capital_loss)) %></td>

    </tbody>
  <% end %>
</table>
<%= will_paginate @census_data, renderer: BootstrapPagination::Rails %>
